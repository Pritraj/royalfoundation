---
// Footer Component
import { siteConfig } from '../config.js';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{siteConfig.name}</h3>
        <p>{siteConfig.description}</p>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <p>Email: {siteConfig.contact.email}</p>
      </div>

      <div class="footer-section">
        <h4>Follow Us</h4>
        <div class="social-links">
          <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="social-link">
            Facebook
          </a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1c1e21;
    color: white;
    padding: 3rem 2rem 1.5rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #667eea;
  }

  .footer-section h4 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .footer-section p {
    color: #b0b3b8;
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: rgba(102, 126, 234, 0.2);
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  .social-link:hover {
    background: #667eea;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    color: #b0b3b8;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
