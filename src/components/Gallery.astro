---
// Gallery Component - Static Photo Gallery
import { siteConfig } from "../config.js";

const images = [
  {
    src: "/photos/activity-1.png",
    alt: "रोजगार मेळावा आणि सामाजिक कार्यक्रम",
    title: "सामाजिक उपक्रम",
  },
  {
    src: "/photos/activity-2.png",
    alt: "महिला सक्षमीकरण प्रशिक्षण",
    title: "महिला सक्षमीकरण",
  },
  {
    src: "/photos/activity-3.png",
    alt: "विद्यार्थी गुणगौरव समारंभ",
    title: "विद्यार्थी विकास",
  },
  { src: "/photos/activity-4.png", alt: "आरोग्य शिबिर", title: "आरोग्य सेवा" },
];
---

<section id="gallery" class="section-padding bg-slate-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
        छायाचित्र दालन
      </h2>
      <p class="text-gray-600 text-lg">
        आमच्या विविध सामाजिक उपक्रमांची काही क्षणचित्रे
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        images.map((img) => (
          <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
            <div class="relative aspect-[4/3] overflow-hidden">
              <img
                src={img.src}
                alt={img.alt}
                loading="lazy"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                <span class="text-white font-semibold">{img.title}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href={siteConfig.social.facebook}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-secondary"
      >
        फेसबुकवर अधिक फोटो पहा
      </a>
    </div>
  </div>
</section>
