---
// Contact Section
import { siteConfig } from "../config.js";
---

<section
  id="contact"
  class="section-padding bg-blue-900 text-white relative overflow-hidden"
>
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-10 bg-slate-900"></div>

  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h4 class="text-amber-400 font-bold uppercase tracking-wider mb-2">
        Join the Movement
      </h4>
      <h2 class="text-3xl lg:text-5xl font-bold mb-8">
        WhatsApp वर मिळणाऱ्या सेवा
      </h2>
      <div class="grid md:grid-cols-2 gap-8 text-left max-w-2xl mx-auto mb-12">
        <ul class="space-y-3">
          <li class="flex items-center gap-3 text-lg text-blue-100">
            <span class="text-green-400 text-xl">✔</span> उपक्रम आणि विकासकामांचे
            अपडेट्स
          </li>
          <li class="flex items-center gap-3 text-lg text-blue-100">
            <span class="text-green-400 text-xl">✔</span> नागरिकांसाठी सूचना व मार्गदर्शन
          </li>
        </ul>
        <ul class="space-y-3">
          <li class="flex items-center gap-3 text-lg text-blue-100">
            <span class="text-green-400 text-xl">✔</span> कार्यक्रमांचे निमंत्रण
          </li>
          <li class="flex items-center gap-3 text-lg text-blue-100">
            <span class="text-green-400 text-xl">✔</span> तक्रार नोंदणी आणि फॉलोअप
          </li>
        </ul>
      </div>

      <div class="flex flex-col items-center justify-center gap-6">
        <a
          href={siteConfig.contact.whatsapp}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white transition-all duration-200 bg-green-600 font-pj rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 hover:bg-green-700 transform hover:-translate-y-1 hover:shadow-2xl"
        >
          <svg
            class="w-8 h-8 mr-3"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
            ></path></svg
          >
          Join Mission on WhatsApp
        </a>
        <div class="text-center mt-8 space-y-2">
          <h3 class="text-xl font-bold text-white mb-4">संपर्क माहिती</h3>
          <p class="text-blue-200 text-base max-w-lg mx-auto">
            <strong>कार्यालय:</strong>
            {siteConfig.contact.address}
          </p>
          <p class="text-blue-200">
            <strong>ईमेल:</strong>
            {siteConfig.contact.email}
          </p>
          <p class="text-blue-200">
            <strong>फोन:</strong>
            {siteConfig.contact.phone}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
